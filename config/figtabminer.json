{
  "ocr_gpu": "auto",
  "layout_enable": "auto",
  "layout_score": 0.5,
  "layout_model": "lp://PubLayNet/faster_rcnn_R_50_FPN_3x/config",
  "layout_weights_path": "",
  
  "figure_min_area": 2000,
  "figure_min_dim": 40,
  "figure_max_page_ratio": 0.85,
  "figure_merge_iou": 0.3,
  "figure_crop_pad": 4,
  "figure_min_ink_ratio": 0.01,
  "figure_min_text_lines_skip": 6,
  
  "table_min_area": 2000,
  "table_min_dim": 40,
  "table_merge_iou": 0.3,
  "table_crop_pad": 2,
  
  "caption_search_window": 300,
  "caption_direction_penalty": 120,
  "caption_continuation_gap": 12,
  
  "bbox_merger": {
    "enable_semantic_merge": true,
    "enable_visual_merge": true,
    "enable_noise_filter": true,
    "overlap_threshold": 0.7,
    "distance_threshold": 50,
    "arrow_aspect_ratio_min": 5.0,
    "arrow_aspect_ratio_max": 0.2,
    "arrow_ink_ratio_max": 0.05,
    "connection_detection_threshold": 0.3,
    "max_merge_distance": 150,
    "min_visual_similarity": 0.3
  },
  
  "table_extraction": {
    "use_enhanced_extractor": true,
    "enable_table_transformer": false,
    "table_transformer_confidence": 0.85,
    "enable_visual_detection": true,
    "enable_math_equation_filter": true,
    "min_grid_lines": 50,
    "try_multiple_strategies": true,
    "strict_validation": true
  },
  
  "chart_classification": {
    "use_enhanced_classifier": true,
    "enable_visual_analysis": true,
    "enable_ocr_assist": false,
    "visual_weight": 0.6,
    "keyword_weight": 0.4
  },
  
  "bar_chart_extraction": {
    "enable_auto_digitize": true,
    "min_bar_width": 5,
    "min_bar_height": 10,
    "axis_detection_threshold": 0.5,
    "enable_ocr_labels": false
  },
  
  "v17_detection": {
    "enable_doclayout": true,
    "enable_table_transformer": true,
    "enable_legacy_detectron": false,
    "doclayout_confidence": 0.35,
    "table_transformer_confidence": 0.75,
    "legacy_confidence": 0.5,
    "fusion_strategy": "weighted_nms",
    "detector_weights": {
      "doclayout": 0.4,
      "table_transformer": 0.4,
      "legacy": 0.2
    },
    "nms_iou_threshold": 0.5,
    "merge_iou_threshold": 0.3,
    "merge_distance_threshold": 50,
    "enable_context_aware_merge": true,
    "enable_boundary_refinement": true,
    "min_quality_score": 0.4,
    "enable_anomaly_detection": true,
    "quality_weights": {
      "detection_confidence": 0.30,
      "content_completeness": 0.25,
      "boundary_precision": 0.20,
      "caption_match": 0.15,
      "position_reasonableness": 0.10
    },
    "enable_hierarchical_classification": true,
    "min_classification_confidence": 0.5,
    "enable_parallel_detection": true,
    "enable_model_caching": true,
    "max_workers": 4,
    "use_legacy_pipeline": false
  },
  
  "text_filter_confidence_threshold": 0.7,
  "text_filter_enable_transformer": false,
  "text_filter_text_density_threshold": 0.08,
  "text_filter_min_structure_score": 200,
  
  "arxiv_filter_enable_ocr": true,
  "arxiv_filter_position_threshold": 0.1,
  "arxiv_filter_area_threshold": 0.05,
  "arxiv_filter_aspect_ratio_min": 1.5,
  "arxiv_filter_aspect_ratio_max": 8.0,
  "arxiv_filter_check_left_margin": true,
  "arxiv_filter_left_margin_threshold": 0.15,
  "arxiv_filter_check_rotation": true,
  
  "table_enhancer_enable_img2table": true,
  "table_enhancer_iou_threshold": 0.3,
  "table_enhancer_min_confidence": 0.5,
  "table_enhancer_shrink_bbox": true,
  "table_enhancer_shrink_ratio": 0.05
}

